.cu-form-group {
  border-bottom: 1rpx solid #eee !important;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding-bottom: 25rpx;
}
.cu-form-group .left {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
}
.cu-form-group .right {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  text-align: right;
}
.cu-form-group .right .cu-btn {
  color: #999;
  border: 1rpx solid #888;
}
.cu-form-group .right .car-input {
  margin-left: 120rpx;
}
.cu-form-group input {
  color: #888;
  border-radius: 3rpx;
  padding-right: 0;
}
.column {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.row {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 0;
}
.row .left {
  width: 250rpx;
  display: flex;
  align-items: center;
}
.row .right {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  text-align: right;
}
.row .right .cu-btn {
  color: #999;
  border: 1rpx solid #888;
}

